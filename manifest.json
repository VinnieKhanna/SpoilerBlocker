{
    "manifest_version": 2,

    "name": "Undecided DelhiHacks extension",
    "description": "This extension will do something beautiful",
    "version": "1.0",

  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab"
     ]
  }